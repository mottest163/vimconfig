" ++++++++++Ronnie add begin++++++++++
" common setting
set nocp
"filetype plugin indent on
filetype plugin indent off

syntax enable
execute pathogen#infect()
execute pathogen#helptags()
syntax on

set fileencodings=utf-8,ucs-bom,cp936,gb2312,gbk,gb18030,latin1
set termencoding=utf-8
set fileformats=unix
set encoding=utf-8
set t_Co=256

" Change Map Leader
" let mapleader=','

" Always show status bar
set ls=2
"Format the statusline
"set statusline=%F%m%r%h%w\ [FORMAT=%{&ff}]\ [TYPE=%Y]\ [POS=%l,%v][%p%%]\ %{strftime(\"20%y/%m/%d\ -\ %H:%M\")}

" Enable hidden buffers
set hidden

"set solarized theme
set background=dark
let g:solarized_termcolors=256
colorscheme solarized

"turn backup off
set nobackup
set nowb
set noswapfile

" Searching
set ignorecase "Ignore case when searching"
set incsearch
set hlsearch
set showmatch

set number
set showcmd

"highlight current input line
autocmd InsertLeave * se nocul
autocmd InsertEnter * se cul

set history=100

" for tab
set tabstop=4
set expandtab
set shiftwidth=4
",set noexpandtab "use for change tab input style
":retab  "use for convert tab to space,after call set expandtab
set list
set listchars=tab:>-,trail:-

set mouse=a

"auto complete
""set completeopt=longest,menu
"":inoremap ( ()<ESC>i
"":inoremap ) <c-r>=ClosePair(')')<CR>
"":inoremap { {<CR>}<ESC>O
"":inoremap } <c-r>=ClosePair('}')<CR>
"":inoremap [ []<ESC>i
"":inoremap ] <c-r>=ClosePair(']')<CR>
"":inoremap " ""<ESC>i
"":inoremap ' ''<ESC>i
""function! ClosePair(char)
""    if getline('.')[col('.') - 1] == a:char
""        return "\<Right>"
""    else
""        return a:char
""    endif
""endfunction

hi ColorColumn ctermbg=darkred guibg=darkred
set cc=81

let g:indent_guides_guide_size = 1
let g:indent_guides_auto_colors = 0
autocmd VimEnter,Colorscheme * :hi IndentGuidesOdd  guibg=red   ctermbg=white
autocmd VimEnter,Colorscheme * :hi IndentGuidesEven guibg=green ctermbg=darkgrey

""""""""""""""""""""""""""""""
" airline
""""""""""""""""""""""""""""""
let g:airline_theme = 'light'
let g:airline_powerline_fonts = 1""
" enable tabline
let g:airline#extensions#tabline#enabled = 1
" set left separator
let g:airline#extensions#tabline#left_sep = ' '
" set left separator which are not editting
let g:airline#extensions#tabline#left_alt_sep = '|'
" show buffer number
let g:airline#extensions#tabline#buffer_nr_show = 1

" ctrlp.vim
set wildmode=list:longest,list:full
set wildignore+=*.o,*.obj,.git,*.rbc,*.pyc,__pycache__
let g:ctrlp_custom_ignore = '\v[\/]\.(git|hg|svn|tox)$'
let g:ctrlp_user_command = "find %s -type f | grep -Ev '"+ g:ctrlp_custom_ignore +"'"
let g:ctrlp_use_caching = 0

" rainbow parentheses
au VimEnter * RainbowParenthesesToggle
au Syntax * RainbowParenthesesLoadRound
au Syntax * RainbowParenthesesLoadSquare
au Syntax * RainbowParenthesesLoadBraces

" default Leader Character is \
nnoremap <silent> <Leader>ib :TagbarToggle<CR>
let NERDTreeDirArrows = 0
nnoremap <silent> <Leader>it :NERDTreeToggle<CR>
" ++++++++++Ronnie add end++++++++++++

" avoid enter Ex mode as Q
nnoremap Q <nop>
