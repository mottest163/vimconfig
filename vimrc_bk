" ++++++++++Ronnie add begin++++++++++
" common setting
set nocp
"filetype plugin indent on
filetype plugin indent off

syntax enable
execute pathogen#infect()
execute pathogen#helptags()
syntax on

set fileencodings=utf-8,ucs-bom,cp936,gb2312,gbk,gb18030,latin1
set termencoding=utf-8
set fileformats=unix
set encoding=utf-8
set t_Co=256

" Change Map Leader
let mapleader=','

" Always show status bar
set ls=2
"Format the statusline
"set statusline=%F%m%r%h%w\ [FORMAT=%{&ff}]\ [TYPE=%Y]\ [POS=%l,%v][%p%%]\ %{strftime(\"20%y/%m/%d\ -\ %H:%M\")}

" Enable hidden buffers
set hidden

"set solarized theme
set background=dark
let g:solarized_termcolors=256
colorscheme solarized

"turn backup off
set nobackup
set nowb
set noswapfile

" Searching
set ignorecase "Ignore case when searching"
set incsearch
set hlsearch
set showmatch

set number
set showcmd

"highlight current input line
autocmd InsertLeave * se nocul
autocmd InsertEnter * se cul

set history=100

" for tab
set tabstop=4
set shiftwidth=4
" set expandtab
",set noexpandtab "use for change tab input style
":retab  "use for convert tab to space,after call set expandtab
set list
set listchars=tab:>-,trail:-

set mouse=a

set path=$PWD/**

hi ColorColumn ctermbg=darkred guibg=darkred
set cc=81

let g:indent_guides_guide_size = 1
let g:indent_guides_auto_colors = 0
autocmd VimEnter,Colorscheme * :hi IndentGuidesOdd  guibg=red   ctermbg=white
autocmd VimEnter,Colorscheme * :hi IndentGuidesEven guibg=green ctermbg=darkgrey

""""""""""""""""""""""""""""""
" airline
""""""""""""""""""""""""""""""
let g:airline_theme = 'light'
let g:airline_powerline_fonts = 1""
" enable tabline
let g:airline#extensions#tabline#enabled = 1
" set left separator
let g:airline#extensions#tabline#left_sep = ' '
" set left separator which are not editting
let g:airline#extensions#tabline#left_alt_sep = '|'
" show buffer number
let g:airline#extensions#tabline#buffer_nr_show = 1

" ctrlp.vim
let g:ctrlp_map = '<leader>p'
let g:ctrlp_cmd = 'CtrlP'
map <leader>fm :CtrlPMRU<CR>
map <leader>fb :CtrlPBuffer<CR>
let g:ctrlp_custom_ignore = {
    \ 'dir':  '\v[\/]\.(git|hg|svn|rvm)$',
    \ 'file': '\v\.(exe|so|dll|zip|tar|tar.gz|pyc)$',
    \ }
let g:ctrlp_working_path_mode=0
let g:ctrlp_match_window_bottom=1
let g:ctrlp_max_height=15
let g:ctrlp_match_window_reversed=0
let g:ctrlp_mruf_max=500
let g:ctrlp_follow_symlinks=1
let g:ctrlp_max_files = 0
let g:ctrlp_mas_depth = 40

" ctrlp-funky
nnoremap <Leader>fu :CtrlPFunky<Cr>
" narrow the list down with a word under cursor
nnoremap <Leader>fU :execute 'CtrlPFunky ' . expand('<cword>')<Cr>
let g:ctrlp_funky_matchtype = 'path'
let g:ctrlp_funky_syntax_highlight = 1

" rainbow parentheses
au VimEnter * RainbowParenthesesToggle
au Syntax * RainbowParenthesesLoadRound
au Syntax * RainbowParenthesesLoadSquare
au Syntax * RainbowParenthesesLoadBraces

" avoid enter Ex mode as Q
nnoremap Q <nop>
